# Move this file to .env in the same directory as the docker-compose.yml file
# Replace the {{ variable }} as a whole with your value
# e.g. RADIUS_HOST={{ hostname }} becomes RADIUS_HOST=radius.intra.lan

# General information
# e.g. Europe/Amsterdam
TZ={{ timezone }}

# Radius host information
# IP for Radius server to bind to
# Hostname can be an internal hostname
# e.g. wifi.intra.lan
RADIUS_IP={{ ip }}
RADIUS_HOST={{ hostname }}

# Certificate information
# Use two letter country abbreviation
COUNTRYNAME={{ country }}
LOCALITYNAME={{ city }}

# Some default values for the Certificate authority
# Leave to defaults if you are not sure
CA_LIFETIME=3650
CRL_LIFETIME=3650
HOST_CERT_LIFETIME=3650

# Uncomment DEBUG to start radiusd in debug mode
# DEBUG=yes

# Uncomment APKREPO_EDGE to install FreeRadius from edge repository
#APKREPO_EDGE="--repository=http://dl-cdn.alpinelinux.org/alpine/edge/main"

# Uncomment NO_PREPARE to stop initialization scripts
# This can be used to manually do the init for a new version of FreeRadius
# Do a docker-compose build followed by
# docker-compose run --entrypoint sh prepare_radiusd
#NO_PREPARE=yes

